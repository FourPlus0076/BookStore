@using BookStore.Enums
@model BookModel
@{
    ViewData["Title"] = "Add New Book";
}
<div class="container">
    <main>
        <div class="py-3 text-center">
            <h2>Add New Book</h2>
        </div>
        @if (ViewBag.IsSuccess==true)
        {
            <div class="alert alert-success" role="alert">
                <strong>Congratulations</strong> You should added new book successfully <br>
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@ViewBag.BookId">Here</a> to view details
                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
       <div class="col-md-12 col-lg-12">       
        <form class="needs-validation" method="post" asp-controller="Book" asp-action="AddNewBook" novalidate="">
          <div class="row g-3">                   
           
             <div class="col-sm-6">
                <label for="firstName" asp-for="languageId" class="form-label"></label>
                     <select asp-for="languageId" class="form-control" id="language" asp-items="ViewBag.language">
                     <option value="">Choose Language</option>
                 </select>                
                <span asp-validation-for="languageId" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Title</label>
               <input type="text" asp-for=Title class="form-control" id="firstName" placeholder="Title" value="" required="">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="col-sm-6"> 
              <label for="lastName" class="form-label">Name</label>
               <input type="text" asp-for=Name class="form-control" id="lastName" placeholder="Name" value="" required="" fdprocessedid="i6fcl">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>
              <div class="col-sm-6">
                  <label for="firstName" asp-for="TotalPages" class="form-label"></label>
                  <input asp-for="TotalPages" class="form-control" id="firstName">
                  <span asp-validation-for="TotalPages" class="text-danger"></span>
              </div>
               <div class="col-sm-6">
                   <label for="firstName" asp-for="Category" class="form-label"></label>
                   <input asp-for="Category" class="form-control" id="firstName">
                   <span asp-validation-for="Category" class="text-danger"></span>
               </div>
            <div class="col-6">
              <label for="address" class="form-label">Description</label>
               <input asp-for=Description type="text" class="form-control" id="address" placeholder="Description" required="" fdprocessedid="5ki9tc">
              <div class="invalid-feedback">
                Please enter your shipping Description.
              </div>
            </div>
          </div>
          <hr />
          <button class="btn btn-primary" type="submit">Submit</button>
        </form>
      </div>       
    </main>
   
</div>
